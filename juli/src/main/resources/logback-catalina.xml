<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <property name="max.retention.days" value="360" />
    <appender name="CATALINA" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/engine.log</file>
        <append>true</append>
        <encoder>
            <charset>utf-8</charset>
            <pattern>%d{HH:mm:ss.SSS} %-5level {%thread} [%logger{40}] : %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${catalina.base}/logs/archive/engine-%d{yyyyMMdd}-%i.log.zip</fileNamePattern>
            <maxHistory>${max.retention.days}</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <maxFileSize>20MB</maxFileSize>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="CATALINA" />
    </root>

</configuration>
